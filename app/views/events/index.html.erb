<!-- app/views/events/index.html.erb -->
<div class="min-h-screen bg-gray-100">
  <!-- Header -->
  <header class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="flex-shrink-0 flex items-center">
            <h1 class="text-xl font-semibold text-gray-900">Events</h1>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "Dashboard", dashboard_path, class: "text-blue-600 hover:text-blue-500 text-sm" %>
          <%= link_to "Export CSV", events_path(format: :csv), class: "text-green-600 hover:text-green-500 text-sm" %>
        </div>
      </div>
    </div>
  </header>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Filters -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Filters</h3>
        <%= form_with url: events_path, method: :get, local: true, class: "grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4" do |form| %>
          <div>
            <%= form.label :search, "Search", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :search, value: params[:search], placeholder: "Event type, action, or metadata", class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
          
          <div>
            <%= form.label :event_type, "Event Type", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :event_type, 
                options_for_select(Event.distinct.pluck(:event_type).compact.sort, params[:event_type]), 
                { prompt: "All Types" }, 
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
          
          <div>
            <%= form.label :severity, "Severity", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :severity, 
                options_for_select(Event.severities.keys.map { |s| [s.humanize, s] }, params[:severity]), 
                { prompt: "All Severities" }, 
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
          
          <div>
            <%= form.label :date_range, "Date Range", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :date_range, 
                options_for_select([
                  ['Last Hour', '1h'],
                  ['Last 24 Hours', '24h'],
                  ['Last 7 Days', '7d'],
                  ['Last 30 Days', '30d'],
                  ['Last 90 Days', '90d']
                ], params[:date_range]), 
                { prompt: "All Time" }, 
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
          
          <div class="sm:col-span-2 lg:col-span-4 flex justify-end space-x-3">
            <%= form.submit "Apply Filters", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <%= link_to "Clear", events_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
      <!-- Total Events -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Events</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @event_stats[:total_events] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Today's Events -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Today</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @event_stats[:today_events] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- This Week -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">This Week</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @event_stats[:this_week_events] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Event Types</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @event_stats[:by_type].keys.count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Events List -->
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @events.each do |event| %>
          <li>
            <div class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="h-8 w-8 rounded-full flex items-center justify-center <%= severity_color(event.severity) %>">
                      <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="flex items-center">
                      <p class="text-sm font-medium text-gray-900">
                        <%= event.event_type %>
                      </p>
                      <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= severity_badge_color(event.severity) %>">
                        <%= event.severity&.upcase || 'INFO' %>
                      </span>
                    </div>
                    <p class="text-sm text-gray-500">
                      <%= event.action %> â€¢ 
                      <% if event.actor_type.present? && event.actor_id.present? %>
                        <%= event.actor_type.humanize %>: <%= event.actor_id %>
                      <% else %>
                        Unknown Actor
                      <% end %>
                    </p>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="text-sm text-gray-500">
                    <%= time_ago_in_words(event.created_at) %> ago
                  </span>
                  <%= link_to "View", event_path(event), class: "text-blue-600 hover:text-blue-500 text-sm font-medium" %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Pagination -->
    <% if @events.respond_to?(:current_page) %>
      <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6 mt-6">
        <div class="flex-1 flex justify-between sm:hidden">
          <% if @events.previous_page %>
            <%= link_to "Previous", events_path(page: @events.previous_page, **request.query_parameters), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <% end %>
          <% if @events.next_page %>
            <%= link_to "Next", events_path(page: @events.next_page, **request.query_parameters), class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <% end %>
        </div>
        <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
          <div>
            <p class="text-sm text-gray-700">
              Showing <span class="font-medium"><%= (@events.current_page - 1) * @events.limit_value + 1 %></span> to <span class="font-medium"><%= [@events.current_page * @events.limit_value, @events.total_count].min %></span> of <span class="font-medium"><%= @events.total_count %></span> results
            </p>
          </div>
          <div>
            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
              <% if @events.previous_page %>
                <%= link_to events_path(page: @events.previous_page, **request.query_parameters), class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
                  <span class="sr-only">Previous</span>
                  <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              <% end %>
              
              <% @events.total_pages.times do |page_num| %>
                <% page = page_num + 1 %>
                <% if page == @events.current_page %>
                  <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-blue-50 text-sm font-medium text-blue-600">
                    <%= page %>
                  </span>
                <% elsif page <= @events.current_page + 2 && page >= @events.current_page - 2 %>
                  <%= link_to page, events_path(page: page, **request.query_parameters), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" %>
                <% end %>
              <% end %>
              
              <% if @events.next_page %>
                <%= link_to events_path(page: @events.next_page, **request.query_parameters), class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
                  <span class="sr-only">Next</span>
                  <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              <% end %>
            </nav>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .severity-info { @apply bg-blue-100; }
    .severity-warning { @apply bg-yellow-100; }
    .severity-error { @apply bg-red-100; }
    .severity-critical { @apply bg-purple-100; }
    
    .badge-info { @apply bg-blue-100 text-blue-800; }
    .badge-warning { @apply bg-yellow-100 text-yellow-800; }
    .badge-error { @apply bg-red-100 text-red-800; }
    .badge-critical { @apply bg-purple-100 text-purple-800; }
  </style>
<% end %>

<% content_for :scripts do %>
  <script>
    function severityColor(severity) {
      const colors = {
        'info': 'bg-blue-100',
        'warning': 'bg-yellow-100', 
        'error': 'bg-red-100',
        'critical': 'bg-purple-100'
      };
      return colors[severity?.toLowerCase()] || 'bg-gray-100';
    }
    
    function severityBadgeColor(severity) {
      const colors = {
        'info': 'bg-blue-100 text-blue-800',
        'warning': 'bg-yellow-100 text-yellow-800',
        'error': 'bg-red-100 text-red-800', 
        'critical': 'bg-purple-100 text-purple-800'
      };
      return colors[severity?.toLowerCase()] || 'bg-gray-100 text-gray-800';
    }
  </script>
<% end %>
