<div class="min-h-screen bg-gray-100">
  <!-- Header -->
  <header class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="flex-shrink-0 flex items-center">
            <h1 class="text-xl font-semibold text-gray-900">Team Settings</h1>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "Team Members", teams_members_path, class: "text-blue-600 hover:text-blue-500 text-sm" %>
          <%= link_to "Dashboard", dashboard_path, class: "text-blue-600 hover:text-blue-500 text-sm" %>
        </div>
      </div>
    </div>
  </header>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Team Information -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Team Information</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Basic team details and configuration</p>
      </div>
      <div class="border-t border-gray-200">
        <%= form_with model: @team, url: teams_settings_path, method: :patch, local: true do |form| %>
          <div class="px-4 py-5 sm:p-6 space-y-6">
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
              <div>
                <%= form.label :name, "Team Name", class: "block text-sm font-medium text-gray-700" %>
                <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
              </div>
              
              <div>
                <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
                <%= form.text_area :description, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
              </div>
            </div>
            
            <div class="flex items-center">
              <%= form.check_box :is_active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <%= form.label :is_active, "Team is active", class: "ml-2 block text-sm text-gray-900" %>
            </div>
            
            <div class="flex justify-end">
              <%= form.submit "Update Team", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Team Settings -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Team Settings</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Advanced team configuration options</p>
      </div>
      <div class="border-t border-gray-200">
        <div class="px-4 py-5 sm:p-6">
          <div class="space-y-6">
            <!-- Notification Settings -->
            <div>
              <h4 class="text-md font-medium text-gray-900 mb-4">Notification Settings</h4>
              <div class="space-y-4">
                <div class="flex items-center">
                  <input type="checkbox" id="notify_on_member_join" name="settings[notify_on_member_join]" 
                         value="true" <%= 'checked' if @team_settings[:notify_on_member_join] %> 
                         class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                  <label for="notify_on_member_join" class="ml-2 block text-sm text-gray-900">
                    Notify team when new members join
                  </label>
                </div>
                
                <div class="flex items-center">
                  <input type="checkbox" id="notify_on_member_leave" name="settings[notify_on_member_leave]" 
                         value="true" <%= 'checked' if @team_settings[:notify_on_member_leave] %> 
                         class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                  <label for="notify_on_member_leave" class="ml-2 block text-sm text-gray-900">
                    Notify team when members leave
                  </label>
                </div>
                
                <div class="flex items-center">
                  <input type="checkbox" id="notify_on_role_change" name="settings[notify_on_role_change]" 
                         value="true" <%= 'checked' if @team_settings[:notify_on_role_change] %> 
                         class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                  <label for="notify_on_role_change" class="ml-2 block text-sm text-gray-900">
                    Notify team when member roles change
                  </label>
                </div>
              </div>
            </div>

            <!-- Security Settings -->
            <div>
              <h4 class="text-md font-medium text-gray-900 mb-4">Security Settings</h4>
              <div class="space-y-4">
                <div class="flex items-center">
                  <input type="checkbox" id="require_mfa" name="settings[require_mfa]" 
                         value="true" <%= 'checked' if @team_settings[:require_mfa] %> 
                         class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                  <label for="require_mfa" class="ml-2 block text-sm text-gray-900">
                    Require two-factor authentication for team members
                  </label>
                </div>
                
                <div class="flex items-center">
                  <input type="checkbox" id="auto_lock_inactive" name="settings[auto_lock_inactive]" 
                         value="true" <%= 'checked' if @team_settings[:auto_lock_inactive] %> 
                         class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                  <label for="auto_lock_inactive" class="ml-2 block text-sm text-gray-900">
                    Automatically lock inactive accounts after 90 days
                  </label>
                </div>
              </div>
            </div>

            <!-- Team Management -->
            <div>
              <h4 class="text-md font-medium text-gray-900 mb-4">Team Management</h4>
              <div class="space-y-4">
                <div class="flex items-center">
                  <input type="checkbox" id="allow_self_removal" name="settings[allow_self_removal]" 
                         value="true" <%= 'checked' if @team_settings[:allow_self_removal] %> 
                         class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                  <label for="allow_self_removal" class="ml-2 block text-sm text-gray-900">
                    Allow members to remove themselves from the team
                  </label>
                </div>
                
                <div class="flex items-center">
                  <input type="checkbox" id="require_approval" name="settings[require_approval]" 
                         value="true" <%= 'checked' if @team_settings[:require_approval] %> 
                         class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                  <label for="require_approval" class="ml-2 block text-sm text-gray-900">
                    Require approval for new member invitations
                  </label>
                </div>
              </div>
            </div>

            <div class="flex justify-end">
              <button type="button" onclick="updateTeamSettings()" 
                      class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                Update Settings
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Team Actions -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Team Actions</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Dangerous actions that affect the entire team</p>
      </div>
      <div class="border-t border-gray-200">
        <div class="px-4 py-5 sm:p-6">
          <div class="space-y-4">
            <% if current_user.team_owner? %>
              <div class="flex items-center justify-between p-4 bg-yellow-50 rounded-md">
                <div>
                  <h4 class="text-sm font-medium text-yellow-800">Deactivate Team</h4>
                  <p class="text-sm text-yellow-700">Temporarily disable the team. Members will not be able to access team resources.</p>
                </div>
                <%= button_to "Deactivate Team", deactivate_teams_settings_path, 
                    method: :patch, 
                    class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-yellow-700 bg-yellow-100 hover:bg-yellow-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500",
                    data: { confirm: "Are you sure you want to deactivate this team?" } %>
              </div>
            <% end %>
            
            <% if current_user.team_owner? && !@team.is_active? %>
              <div class="flex items-center justify-between p-4 bg-green-50 rounded-md">
                <div>
                  <h4 class="text-sm font-medium text-green-800">Activate Team</h4>
                  <p class="text-sm text-green-700">Re-enable the team and restore member access.</p>
                </div>
                <%= button_to "Activate Team", activate_teams_settings_path, 
                    method: :patch, 
                    class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function updateTeamSettings() {
  const formData = new FormData();
  
  // Collect all checkbox values
  const checkboxes = document.querySelectorAll('input[type="checkbox"]');
  checkboxes.forEach(checkbox => {
    if (checkbox.checked) {
      formData.append(checkbox.name, checkbox.value);
    }
  });
  
  fetch('<%= update_settings_teams_settings_path %>', {
    method: 'PATCH',
    headers: {
      'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
    },
    body: formData
  }).then(response => {
    if (response.ok) {
      window.location.reload();
    } else {
      alert('Failed to update settings');
    }
  });
}
</script> 