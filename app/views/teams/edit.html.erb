<div class="min-h-screen bg-gray-50">
  <div class="max-w-3xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center space-x-4">
        <%= link_to team_path(@team), class: "text-gray-400 hover:text-gray-600" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        <% end %>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Edit Team</h1>
          <p class="mt-1 text-sm text-gray-600">Update team information and settings</p>
        </div>
      </div>
    </div>

    <!-- Edit Form -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Team Details</h3>
      </div>
      
      <div class="px-6 py-6">
        <%= form_with model: @team, local: true, class: "space-y-6" do |f| %>
          <div>
            <%= f.label :name, "Team Name", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500", placeholder: "e.g., Development Team" %>
            <% if @team.errors[:name].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @team.errors[:name].first %></p>
            <% end %>
          </div>

          <div>
            <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_area :description, rows: 4, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500", placeholder: "Describe the team's purpose and responsibilities" %>
            <% if @team.errors[:description].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @team.errors[:description].first %></p>
            <% end %>
          </div>

          <div class="flex items-center">
            <%= f.check_box :is_active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= f.label :is_active, "Team is active", class: "ml-2 block text-sm text-gray-900" %>
          </div>

          <div class="flex justify-end space-x-3">
            <%= link_to "Cancel", team_path(@team), class: "px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-md" %>
            <%= f.submit "Update Team", class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-md" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 