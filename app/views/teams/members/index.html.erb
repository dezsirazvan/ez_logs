<div class="min-h-screen bg-gray-100">
  <!-- Header -->
  <header class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="flex-shrink-0 flex items-center">
            <h1 class="text-xl font-semibold text-gray-900">Team Members</h1>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "Dashboard", dashboard_path, class: "text-blue-600 hover:text-blue-500 text-sm" %>
          <%= link_to "Team Settings", edit_teams_settings_path, class: "text-blue-600 hover:text-blue-500 text-sm" %>
        </div>
      </div>
    </div>
  </header>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Team Stats -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-4 mb-6">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Members</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @member_stats[:total_members] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Active Members</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @member_stats[:active_members] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Pending Invitations</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @member_stats[:pending_invitations] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Roles</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @member_stats[:by_role].keys.count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Invite New Member -->
    <% if current_user.can_invite_members? %>
      <div class="bg-white shadow rounded-lg mb-6">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Invite New Member</h3>
          <%= form_with url: invite_teams_members_path, method: :post, local: true, class: "grid grid-cols-1 gap-4 sm:grid-cols-3" do |form| %>
            <div>
              <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700" %>
              <%= form.email_field :email, required: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
            </div>
            
            <div>
              <%= form.label :role_id, "Role", class: "block text-sm font-medium text-gray-700" %>
              <%= form.select :role_id, 
                  options_from_collection_for_select(Role.all, :id, :name), 
                  {}, 
                  class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
            </div>
            
            <div class="flex items-end">
              <%= form.submit "Send Invitation", class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Team Members -->
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Team Members</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Current team members and their roles</p>
      </div>
      <ul class="divide-y divide-gray-200">
        <% @members.each do |member| %>
          <li>
            <div class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
                      <span class="text-sm font-medium text-gray-700">
                        <%= member.first_name[0] + member.last_name[0] %>
                      </span>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="flex items-center">
                      <p class="text-sm font-medium text-gray-900">
                        <%= member.full_name %>
                        <% if @team.owner?(member) %>
                          <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                            Owner
                          </span>
                        <% end %>
                      </p>
                    </div>
                    <p class="text-sm text-gray-500">
                      <%= member.email %> • <%= member.role.name.humanize %>
                    </p>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <% if current_user.can_change_roles? && !@team.owner?(member) %>
                    <select class="text-sm border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" 
                            onchange="updateMemberRole('<%= member.id %>', this.value)">
                      <% Role.all.each do |role| %>
                        <option value="<%= role.id %>" <%= 'selected' if member.role == role %>>
                          <%= role.name.humanize %>
                        </option>
                      <% end %>
                    </select>
                  <% else %>
                    <span class="text-sm text-gray-500"><%= member.role.name.humanize %></span>
                  <% end %>
                  
                  <% if current_user.can_remove_members? && member != current_user %>
                    <%= button_to "Remove", remove_teams_members_path(id: member.id), 
                        method: :delete, 
                        class: "text-red-600 hover:text-red-500 text-sm font-medium",
                        data: { confirm: "Are you sure you want to remove #{member.full_name} from the team?" } %>
                  <% end %>
                  
                  <% if current_user.can_transfer_ownership? && !@team.owner?(member) %>
                    <%= button_to "Make Owner", transfer_ownership_teams_members_path(id: member.id), 
                        method: :patch, 
                        class: "text-purple-600 hover:text-purple-500 text-sm font-medium",
                        data: { confirm: "Are you sure you want to transfer ownership to #{member.full_name}?" } %>
                  <% end %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Pending Invitations -->
    <% if @pending_invitations.any? %>
      <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-md">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Pending Invitations</h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">Invitations that have been sent but not yet accepted</p>
        </div>
        <ul class="divide-y divide-gray-200">
          <% @pending_invitations.each do |invitation| %>
            <li>
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="flex-shrink-0">
                      <div class="h-10 w-10 rounded-full bg-yellow-100 flex items-center justify-center">
                        <svg class="h-5 w-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                      </div>
                    </div>
                    <div class="ml-4">
                      <p class="text-sm font-medium text-gray-900">
                        <%= invitation.email %>
                      </p>
                      <p class="text-sm text-gray-500">
                        Invited by <%= invitation.invited_by.full_name %> • <%= invitation.role.name.humanize %> • <%= time_ago_in_words(invitation.created_at) %> ago
                      </p>
                    </div>
                  </div>
                  <div class="flex items-center space-x-2">
                    <% if current_user.can_invite_members? %>
                      <%= button_to "Cancel", cancel_invitation_teams_members_path(invitation_id: invitation.id), 
                          method: :delete, 
                          class: "text-red-600 hover:text-red-500 text-sm font-medium",
                          data: { confirm: "Are you sure you want to cancel this invitation?" } %>
                    <% end %>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>

<script>
function updateMemberRole(memberId, roleId) {
  fetch('<%= update_role_teams_members_path %>', {
    method: 'PATCH',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
    },
    body: JSON.stringify({
      id: memberId,
      role_id: roleId
    })
  }).then(response => {
    if (response.ok) {
      window.location.reload();
    } else {
      alert('Failed to update role');
    }
  });
}
</script> 