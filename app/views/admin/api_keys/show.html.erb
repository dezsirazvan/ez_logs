<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="mb-6">
      <%= link_to admin_api_keys_path, class: "text-blue-600 hover:text-blue-500" do %>
        ‚Üê Back to API Keys
      <% end %>
    </div>
    
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">API Key Details</h3>
      </div>
      <div class="p-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">Name</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @api_key.display_name %></dd>
          </div>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">Status</dt>
            <dd class="mt-1">
              <% if @api_key.active? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Active
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  Revoked
                </span>
              <% end %>
            </dd>
          </div>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">Company</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @api_key.company.name %></dd>
          </div>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">Created</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @api_key.created_at.strftime("%B %d, %Y") %></dd>
          </div>
          
          <% if @api_key.last_used_at %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Last Used</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @api_key.last_used_at.strftime("%B %d, %Y") %></dd>
            </div>
          <% end %>
          
          <% if @api_key.description.present? %>
            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Description</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @api_key.description %></dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>
  </div>
</div> 