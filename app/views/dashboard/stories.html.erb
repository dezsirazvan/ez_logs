<div class="min-h-screen bg-gradient-to-br from-slate-50 via-purple-50 to-indigo-50">
  <!-- Header -->
  <div class="bg-white/80 backdrop-blur-sm border-b border-white/20 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-8">
        <div class="space-y-2">
          <h1 class="text-4xl font-bold bg-gradient-to-r from-gray-900 via-purple-800 to-indigo-900 bg-clip-text text-transparent">
            Story Flows
          </h1>
          <p class="text-lg text-gray-600 font-medium">Discover the complete narratives behind your events</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to dashboard_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Dashboard
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Story Statistics -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-purple-100">
              <svg class="h-5 w-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </span>
          </div>
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@pagination[:total_count]) %></div>
            <div class="text-sm text-gray-500">Total Stories</div>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-blue-100">
              <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-6a2 2 0 012-2h2a2 2 0 012 2v6m-6 0h6"></path>
              </svg>
            </span>
          </div>
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@pagination[:total_events]) %></div>
            <div class="text-sm text-gray-500">Total Events</div>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-green-100">
              <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
            </span>
          </div>
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@pagination[:total_actors]) %></div>
            <div class="text-sm text-gray-500">Unique Actors</div>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-yellow-100">
              <svg class="h-5 w-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </span>
          </div>
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900">
              <%= @pagination[:avg_duration] > 0 ? distance_of_time_in_words(@pagination[:avg_duration]) : 'N/A' %>
            </div>
            <div class="text-sm text-gray-500">Avg Duration</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Stories Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
    <% if @stories.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @stories.each do |story| %>
          <div class="group relative bg-white rounded-2xl shadow-lg border border-gray-200 hover:shadow-xl hover:border-purple-300 transition-all duration-300 transform hover:-translate-y-2 hover:scale-105 overflow-hidden">
            <!-- Story Header -->
            <div class="absolute top-0 left-0 right-0 h-2 bg-gradient-to-r from-purple-500 to-indigo-600"></div>
            
            <div class="p-6">
              <!-- Story Title and Badge -->
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-2">
                  <span class="inline-block w-3 h-3 rounded-full bg-purple-400"></span>
                  <span class="font-semibold text-purple-700">Story Flow</span>
                </div>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                  <%= story[:event_count] %> events
                </span>
              </div>

              <!-- Event Timeline Visualization -->
              <div class="mb-4">
                <div class="flex items-center space-x-1 mb-2">
                  <% story[:events].first(10).each_with_index do |event, idx| %>
                    <div class="w-2 h-2 rounded-full <%= idx == 0 ? 'bg-purple-600' : idx < 3 ? 'bg-purple-400' : 'bg-purple-200' %>" 
                         title="<%= event.action %>"></div>
                  <% end %>
                  <% if story[:events].size > 10 %>
                    <span class="text-xs text-gray-400 ml-2">+<%= story[:events].size - 10 %></span>
                  <% end %>
                </div>
                
                <!-- Timeline with labels -->
                <div class="flex items-center justify-between text-xs text-gray-500">
                  <span>Start: <%= story[:first_event].timestamp.strftime("%H:%M") %></span>
                  <span>End: <%= story[:last_event].timestamp.strftime("%H:%M") %></span>
                </div>
              </div>

              <!-- Story Details -->
              <div class="space-y-3">
                <div class="text-xs text-gray-600">
                  <span class="font-medium">Correlation ID:</span>
                  <div class="mt-1 font-mono bg-gray-100 px-2 py-1 rounded text-xs break-all">
                    <%= story[:correlation_id] %>
                  </div>
                </div>

                <div class="flex items-center justify-between text-xs text-gray-500">
                  <span>
                    <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                    </svg>
                    <%= story[:actors].size %> actors
                  </span>
                  <span>
                    <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <%= story[:duration] ? distance_of_time_in_words(story[:duration]) : 'N/A' %>
                  </span>
                </div>

                <!-- Event Types -->
                <div class="text-xs text-gray-600">
                  <span class="font-medium">Event Types:</span>
                  <div class="mt-1 flex flex-wrap gap-1">
                    <% story[:event_types].first(3).each do |event_type| %>
                      <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-100 text-blue-800">
                        <%= event_type.titleize %>
                      </span>
                    <% end %>
                    <% if story[:event_types].size > 3 %>
                      <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-600">
                        +<%= story[:event_types].size - 3 %> more
                      </span>
                    <% end %>
                  </div>
                </div>

                <!-- Story Summary -->
                <div class="text-sm text-gray-800 font-medium truncate">
                  <%= story[:events].first.action&.titleize %>
                </div>

                <div class="text-xs text-gray-400">
                  <%= time_ago_in_words(story[:first_event].timestamp) %> ago
                </div>
              </div>

              <!-- Action Button -->
              <div class="mt-4 pt-4 border-t border-gray-100">
                <%= link_to dashboard_story_path(story[:correlation_id]), class: "w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-purple-700 bg-purple-100 hover:bg-purple-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200 group-hover:bg-purple-200" do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  View Story
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @pagination[:total_pages] > 1 %>
        <div class="mt-8 flex items-center justify-center">
          <div class="bg-white rounded-2xl shadow-lg px-6 py-4">
            <div class="flex items-center space-x-4">
              <% if @pagination[:has_prev] %>
                <%= link_to dashboard_stories_path(page: @pagination[:current_page] - 1), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors" do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                  </svg>
                  Previous
                <% end %>
              <% end %>

              <div class="flex items-center space-x-2">
                <% (1..@pagination[:total_pages]).each do |page| %>
                  <% if page == @pagination[:current_page] %>
                    <span class="inline-flex items-center px-3 py-2 border border-purple-300 text-sm font-medium rounded-lg text-purple-700 bg-purple-50">
                      <%= page %>
                    </span>
                  <% elsif page == 1 || page == @pagination[:total_pages] || (page >= @pagination[:current_page] - 1 && page <= @pagination[:current_page] + 1) %>
                    <%= link_to page, dashboard_stories_path(page: page), class: "inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors" %>
                  <% elsif page == @pagination[:current_page] - 2 || page == @pagination[:current_page] + 2 %>
                    <span class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-400">...</span>
                  <% end %>
                <% end %>
              </div>

              <% if @pagination[:has_next] %>
                <%= link_to dashboard_stories_path(page: @pagination[:current_page] + 1), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors" do %>
                  Next
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <div class="mx-auto h-24 w-24 bg-purple-100 rounded-full flex items-center justify-center mb-6">
          <svg class="h-12 w-12 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No story flows yet</h3>
        <p class="text-gray-500 mb-6 max-w-md mx-auto">
          Story flows appear when you have correlated events that tell a complete narrative. 
          Start tracking correlated events to see your first stories here.
        </p>
        <div class="flex justify-center space-x-4">
          <%= link_to events_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            View Events
          <% end %>
          <%= link_to dashboard_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Dashboard
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }
</style>

<script>
  // Add smooth animations on page load
  document.addEventListener('DOMContentLoaded', function() {
    const cards = document.querySelectorAll('.grid > *');
    cards.forEach((card, index) => {
      card.style.animationDelay = `${index * 0.1}s`;
      card.classList.add('animate-fade-in-up');
    });
  });
  
  // Auto-refresh every 60 seconds for stories
  setInterval(function() {
    if (window.location.pathname === '<%= dashboard_stories_path %>') {
      window.location.reload();
    }
  }, 60000);
</script> 