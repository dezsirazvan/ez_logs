<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Event Timeline</h1>
          <p class="mt-1 text-sm text-gray-500">Monitor and analyze all system events in real-time</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Export CSV", events_path(format: :csv, **request.query_parameters), 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <button type="button" onclick="refreshEvents()" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            Refresh
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Events</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @event_stats[:total_events] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Today</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @event_stats[:today_events] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-yellow-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">This Week</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @event_stats[:this_week_events] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Active Sessions</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @event_stats[:active_sessions] || 0 %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Enhanced Global Search -->
    <div class="mb-6">
      <%= form_with url: events_path, method: :get, local: true, class: "relative" do |form| %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <%= form.text_field :q, 
              value: @filters[:q], 
              placeholder: "Search events, actions, actors, subjects, correlation IDs...", 
              class: "search-input block w-full pl-10 pr-12 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm",
              data: { 
                controller: "search",
                action: "input->search#suggest",
                "search-url-value": "/events/search_suggestions"
              } %>
          <div class="absolute inset-y-0 right-0 flex items-center">
            <% if @filters[:q].present? %>
              <%= link_to events_path(@filters.except(:q, :page)), 
                  class: "clear-button p-2 text-gray-400 hover:text-gray-600 transition-colors", 
                  title: "Clear search" do %>
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              <% end %>
            <% end %>
            <%= form.submit "Search", 
                class: "ml-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" %>
          </div>
        </div>
        
        <!-- Search Suggestions Dropdown -->
        <div data-search-target="suggestions" class="search-suggestions hidden absolute z-10 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-y-auto">
          <!-- Suggestions will be populated by JavaScript -->
        </div>
        
        <!-- Search Tips -->
        <div class="search-tips mt-2 text-xs text-gray-500">
          <span class="font-medium">Search tips:</span> 
          Use quotes for exact phrases, 
          <code>action:login</code> for specific fields,
          <code>type:http.request</code> for event types
        </div>
      <% end %>
    </div>

    <!-- Enhanced Filters -->
    <div class="filter-card bg-white shadow rounded-lg mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-medium text-gray-900">Filters</h3>
          <% if @filters.values.any?(&:present?) %>
            <%= link_to "Clear All", events_path, class: "text-sm text-red-600 hover:text-red-700 font-medium" %>
          <% end %>
        </div>
      </div>
      
      <div class="px-6 py-4">
        <%= form_with url: events_path, method: :get, local: true, class: "space-y-4" do |form| %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Event Type</label>
              <%= form.select :event_type, 
                  options_for_select([
                    ['All Types', ''],
                    ['HTTP Request', 'http.request'],
                    ['Data Change', 'data.change'],
                    ['Job Execution', 'job.execution']
                  ], @filters[:event_type]),
                  {},
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Date Range</label>
              <%= form.select :date_range, 
                  options_for_select([
                    ['All Time', ''],
                    ['Last 24 Hours', '24h'],
                    ['Last 7 Days', '7d'],
                    ['Last 30 Days', '30d'],
                    ['Last 90 Days', '90d']
                  ], @filters[:date_range]),
                  {},
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Actor Type</label>
              <%= form.select :actor_type, 
                  options_for_select([
                    ['All Actors', ''],
                    ['User', 'user'],
                    ['System', 'system'],
                    ['API', 'api']
                  ], @filters[:actor_type]),
                  {},
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Correlation Status</label>
              <%= form.select :correlation_status, 
                  options_for_select([
                    ['All Events', ''],
                    ['With Correlation', 'with_correlation'],
                    ['Without Correlation', 'without_correlation']
                  ], @filters[:correlation_status]),
                  {},
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
            </div>
          </div>
          
          <div class="flex items-center justify-between pt-4 border-t border-gray-200">
            <div class="text-sm text-gray-500">
              <% active_filters = @filters.values.count(&:present?) %>
              <% if active_filters > 0 %>
                <%= pluralize(active_filters, 'filter') %> active
              <% else %>
                No filters applied
              <% end %>
            </div>
            <div class="flex space-x-3">
              <%= form.submit "Apply Filters", 
                  class: "px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" %>
              <%= link_to "Reset", events_path, 
                  class: "px-4 py-2 border border-gray-300 text-gray-700 text-sm font-medium rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Events Timeline -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Event Timeline</h3>
        <p class="text-xs text-gray-500">Showing <%= ((@events.instance_variable_get(:@current_page) - 1) * @events.instance_variable_get(:@per_page) + 1) %>–<%= [@events.instance_variable_get(:@current_page) * @events.instance_variable_get(:@per_page), @event_stats[:total_events]].min %> of <%= @event_stats[:total_events] %> events</p>
      </div>
      
      <div class="divide-y divide-gray-200">
        <% if @events.any? %>
          <% @events.each do |event| %>
            <div class="px-6 py-4 hover:bg-gray-50 transition-colors duration-150">
              <div class="flex items-start space-x-4">
                <!-- Event Icon -->
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 rounded-full flex items-center justify-center <%= event_type_color_class(event.event_type) %>" title="<%= event.event_type.humanize %>">
                    <%= event_type_icon(event.event_type) %>
                  </div>
                </div>

                <!-- Event Content -->
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-2">
                      <%= link_to event_path(event), class: "text-sm font-medium text-gray-900 hover:text-blue-600 hover:underline", title: "View event details" do %>
                        <%= event.action %>
                      <% end %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800" title="Event Type">
                        <%= event.event_type.humanize %>
                      </span>
                      <% if event.correlation_id.present? %>
                        <% related_events_count = Event.where(company: current_user.company, correlation_id: event.correlation_id).where.not(id: event.id).count %>
                        <% if related_events_count > 0 %>
                          <%= link_to event_path(event), class: "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 hover:bg-blue-200", title: "View full flow (#{related_events_count + 1} events)" do %>
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                            </svg>
                            View Flow (<%= related_events_count + 1 %>)
                          <% end %>
                          <button onclick="navigator.clipboard.writeText(JSON.stringify(<%= raw event.to_json %>, null, 2))" class="ml-2 text-xs text-green-600 hover:underline" title="Copy event JSON for GPT">Translate with GPT</button>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= event.timestamp.strftime("%Y-%m-%d %H:%M:%S") %>
                    </div>
                  </div>
                  
                  <div class="mt-1 text-sm text-gray-600">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                      <div>
                        <span class="font-medium">Actor:</span> <%= event.actor_display %>
                      </div>
                      <div>
                        <span class="font-medium">Subject:</span> <%= event.subject_display %>
                      </div>
                    </div>
                    
                    <% if event.metadata.present? %>
                      <div class="mt-2 p-2 bg-gray-50 rounded text-xs text-gray-600">
                        <span class="font-medium">Details:</span> 
                        <% if event.metadata.is_a?(Hash) %>
                          <% if event.metadata['status'].present? %>
                            Status: <%= event.metadata['status'] %>
                          <% end %>
                          <% if event.metadata['duration'].present? %>
                            Duration: <%= number_with_precision(event.metadata['duration'], precision: 3) %>s
                          <% end %>
                          <% if event.metadata['error'].present? %>
                            Error: <%= event.metadata['error'] %>
                          <% end %>
                        <% else %>
                          <%= event.metadata_summary %>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-12 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No events found</h3>
            <p class="mt-1 text-sm text-gray-500">Try adjusting your filters or check back later.</p>
          </div>
        <% end %>
      </div>

      <!-- Pagination Bar -->
      <div class="flex justify-between items-center px-6 py-4 border-t border-gray-200 bg-gray-50">
        <div class="text-sm text-gray-500">
          Page <%= @events.instance_variable_get(:@current_page) %> of <%= (@event_stats[:total_events].to_f / @events.instance_variable_get(:@per_page)).ceil %>
        </div>
        <div class="flex space-x-2">
          <% current_page = @events.instance_variable_get(:@current_page) %>
          <% total_pages = (@event_stats[:total_events].to_f / @events.instance_variable_get(:@per_page)).ceil %>
          <%= link_to 'First', events_path(@filters.merge(page: 1)), class: "px-2 py-1 rounded #{current_page == 1 ? 'bg-gray-200 text-gray-400' : 'bg-white text-blue-600 hover:bg-blue-50'}" %>
          <%= link_to 'Prev', events_path(@filters.merge(page: [current_page - 1, 1].max)), class: "px-2 py-1 rounded #{current_page == 1 ? 'bg-gray-200 text-gray-400' : 'bg-white text-blue-600 hover:bg-blue-50'}" %>
          <span class="px-2 py-1">Page <%= current_page %></span>
          <%= link_to 'Next', events_path(@filters.merge(page: [current_page + 1, total_pages].min)), class: "px-2 py-1 rounded #{current_page == total_pages ? 'bg-gray-200 text-gray-400' : 'bg-white text-blue-600 hover:bg-blue-50'}" %>
          <%= link_to 'Last', events_path(@filters.merge(page: total_pages)), class: "px-2 py-1 rounded #{current_page == total_pages ? 'bg-gray-200 text-gray-400' : 'bg-white text-blue-600 hover:bg-blue-50'}" %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function refreshEvents() {
  window.location.reload();
}

// Auto-refresh every 30 seconds
setInterval(function() {
  // Only refresh if we're on the events page and no filters are applied
  if (window.location.pathname === '/dashboard/events' && !window.location.search) {
    refreshEvents();
  }
}, 30000);
</script> 