<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Settings</h1>
          <p class="mt-2 text-sm text-gray-600">Manage your application settings and configurations</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to dashboard_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Dashboard
          <% end %>
        </div>
      </div>
    </div>

    <div class="space-y-6">
      <!-- API Keys -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">API Keys</h3>
          <p class="mt-1 text-sm text-gray-500">Manage API keys for external integrations and data access</p>
        </div>
        <div class="p-6">
          <div class="space-y-6">
            <!-- API Key Summary -->
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-4">
              <div class="bg-blue-50 p-4 rounded-lg">
                <div class="text-2xl font-bold text-blue-600">
                  <% if @company.api_keys.exists? %>
                    <%= @company.api_keys.count %>
                  <% else %>
                    0
                  <% end %>
                </div>
                <div class="text-sm text-blue-500">Total Keys</div>
              </div>
              <div class="bg-green-50 p-4 rounded-lg">
                <div class="text-2xl font-bold text-green-600">
                  <% if @company.api_keys.exists? %>
                    <%= @company.api_keys.where(is_active: true).count %>
                  <% else %>
                    0
                  <% end %>
                </div>
                <div class="text-sm text-green-500">Active</div>
              </div>
              <div class="bg-yellow-50 p-4 rounded-lg">
                <div class="text-2xl font-bold text-yellow-600">
                  <% if @company.api_keys.exists? %>
                    <%= @company.api_keys.where(is_active: false).count %>
                  <% else %>
                    0
                  <% end %>
                </div>
                <div class="text-sm text-yellow-500">Inactive</div>
              </div>
              <div class="bg-purple-50 p-4 rounded-lg">
                <div class="text-2xl font-bold text-purple-600">
                  <% if @company.api_keys.exists? %>
                    <%= @company.api_keys.where('created_at > ?', 7.days.ago).count %>
                  <% else %>
                    0
                  <% end %>
                </div>
                <div class="text-sm text-purple-500">Recent</div>
              </div>
            </div>

            <!-- API Key Actions -->
            <div class="flex space-x-3">
              <%= link_to companies_api_keys_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
                Manage API Keys
              <% end %>
              
              <%= link_to new_companies_api_key_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Create New Key
              <% end %>
            </div>

            <!-- API Documentation Link -->
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h4 class="text-sm font-medium text-gray-900">API Documentation</h4>
                  <p class="text-sm text-gray-500 mt-1">
                    Learn how to integrate with our API and use your API keys effectively.
                  </p>
                  <div class="mt-2">
                    <a href="#" class="text-sm font-medium text-blue-600 hover:text-blue-500">
                      View API Documentation â†’
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 