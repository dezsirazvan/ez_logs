<div class="min-h-screen bg-gradient-to-br from-slate-50 via-purple-50 to-indigo-50">
  <!-- Header -->
  <div class="bg-white/80 backdrop-blur-sm border-b border-white/20 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-8">
        <div class="space-y-2">
          <h1 class="text-4xl font-bold bg-gradient-to-r from-gray-900 via-purple-800 to-indigo-900 bg-clip-text text-transparent">
            Story Flow
          </h1>
          <p class="text-lg text-gray-600 font-medium">Complete narrative of correlated events</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to stories_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Stories
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Story Summary -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
    <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span class="inline-flex items-center justify-center h-12 w-12 rounded-full bg-purple-100">
              <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </span>
          </div>
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900"><%= @story_summary[:event_count] %></div>
            <div class="text-sm text-gray-500">Total Events</div>
          </div>
        </div>

        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span class="inline-flex items-center justify-center h-12 w-12 rounded-full bg-blue-100">
              <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
            </span>
          </div>
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900"><%= @story_summary[:actors].size %></div>
            <div class="text-sm text-gray-500">Unique Actors</div>
          </div>
        </div>

        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span class="inline-flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
              <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </span>
          </div>
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900">
              <%= @story_summary[:duration] ? distance_of_time_in_words(@story_summary[:duration]) : 'N/A' %>
            </div>
            <div class="text-sm text-gray-500">Duration</div>
          </div>
        </div>

        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span class="inline-flex items-center justify-center h-12 w-12 rounded-full bg-yellow-100">
              <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </span>
          </div>
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900"><%= @story_summary[:event_types].size %></div>
            <div class="text-sm text-gray-500">Event Types</div>
          </div>
        </div>
      </div>

      <!-- Correlation ID -->
      <div class="mt-6 pt-6 border-t border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Correlation ID</h3>
            <div class="font-mono bg-gray-100 px-4 py-2 rounded-lg text-sm break-all">
              <%= @story_summary[:correlation_id] %>
            </div>
          </div>
          <button onclick="navigator.clipboard.writeText('<%= @story_summary[:correlation_id] %>')" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
            Copy ID
          </button>
        </div>
      </div>

      <!-- Timeline Range -->
      <div class="mt-4 flex items-center justify-between text-sm text-gray-600">
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Started: <%= @story_summary[:first_event].timestamp.strftime("%B %d, %Y at %I:%M:%S %p") %>
        </div>
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Ended: <%= @story_summary[:last_event].timestamp.strftime("%B %d, %Y at %I:%M:%S %p") %>
        </div>
      </div>
    </div>
  </div>

  <!-- Event Timeline -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
    <div class="bg-white rounded-2xl shadow-lg p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-900 flex items-center">
          <svg class="w-6 h-6 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          Event Timeline
        </h2>
        <div class="flex items-center space-x-2">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
            <%= @events.count %> events
          </span>
        </div>
      </div>

      <!-- Timeline Visualization -->
      <div class="relative mb-8">
        <!-- Timeline Line -->
        <div class="absolute left-6 top-0 bottom-0 w-0.5 bg-gray-200"></div>
        
        <div class="space-y-6">
          <% @events.each_with_index do |event, index| %>
            <div class="relative flex items-start space-x-4 group">
              <!-- Timeline Dot -->
              <div class="flex-shrink-0">
                <div class="h-12 w-12 rounded-full flex items-center justify-center bg-blue-100 shadow-lg border-4 border-white">
                  <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              </div>

              <!-- Event Content -->
              <div class="flex-1 min-w-0 bg-gray-50 rounded-xl p-6 hover:bg-blue-50 transition-all duration-200 group-hover:shadow-md">
                <div class="flex items-start justify-between mb-4">
                  <div class="flex items-center space-x-3">
                    <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                      <%= event.event_type&.titleize %>
                    </h3>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      #<%= index + 1 %>
                    </span>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= event.timestamp.strftime("%I:%M:%S %p") %>
                  </div>
                </div>

                <div class="space-y-3">
                  <!-- Action -->
                  <div class="text-sm text-gray-700">
                    <span class="font-medium">Action:</span> 
                    <span class="text-blue-600 font-semibold"><%= event.action&.titleize %></span>
                  </div>

                  <!-- Actor -->
                  <% if event.actor.present? && event.actor['type'].present? && event.actor['id'].present? %>
                    <div class="text-sm text-gray-700">
                      <span class="font-medium">Actor:</span> 
                      <span class="text-green-600 font-semibold"><%= event.actor['type'].humanize %> <%= event.actor['id'] %></span>
                    </div>
                  <% end %>

                  <!-- Subject -->
                  <% if event.subject.present? && event.subject['type'].present? && event.subject['id'].present? %>
                    <div class="text-sm text-gray-700">
                      <span class="font-medium">Subject:</span> 
                      <span class="text-purple-600 font-semibold"><%= event.subject['type'].humanize %> <%= event.subject['id'] %></span>
                    </div>
                  <% end %>

                  <!-- Metadata -->
                  <% if event.metadata.present? %>
                    <div class="text-sm text-gray-700">
                      <span class="font-medium">Details:</span>
                      <div class="mt-2 bg-white rounded-lg p-3 border font-mono text-xs overflow-x-auto">
                        <%= JSON.pretty_generate(event.metadata) %>
                      </div>
                    </div>
                  <% end %>

                  <!-- Time since previous event -->
                  <% if index > 0 %>
                    <% time_diff = event.timestamp - @events[index - 1].timestamp %>
                    <div class="text-xs text-gray-500">
                      <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <%= time_diff > 0 ? distance_of_time_in_words(time_diff) : 'Immediate' %> after previous event
                    </div>
                  <% end %>
                </div>

                <!-- Action Buttons -->
                <div class="mt-4 pt-4 border-t border-gray-200 flex items-center space-x-3">
                  <%= link_to event_path(event), class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    View Details
                  <% end %>
                  
                  <button onclick="navigator.clipboard.writeText(JSON.stringify(<%= raw event.to_json %>, null, 2))" class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                    Copy JSON
                  </button>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Story Analysis -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8 mb-12">
    <div class="bg-white rounded-2xl shadow-lg p-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
        <svg class="w-6 h-6 text-indigo-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        Story Analysis
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Event Types Breakdown -->
        <div class="bg-gray-50 rounded-xl p-4">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Event Types</h3>
          <div class="space-y-2">
            <% @story_summary[:event_types].each do |event_type| %>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-700"><%= event_type.titleize %></span>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= @events.select { |e| e.event_type == event_type }.count %>
                </span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Actors Involved -->
        <div class="bg-gray-50 rounded-xl p-4">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Actors Involved</h3>
          <div class="space-y-2">
            <% @story_summary[:actors].each do |actor| %>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-700"><%= actor %></span>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Active
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Story Summary -->
      <div class="mt-6 pt-6 border-t border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">Story Summary</h3>
        <div class="bg-blue-50 rounded-xl p-4">
          <p class="text-sm text-gray-700 leading-relaxed">
            This story flow began with <strong><%= @story_summary[:first_event].action&.titleize %></strong> 
            by <strong><%= @story_summary[:first_event].actor_display %></strong> 
            at <%= @story_summary[:first_event].timestamp.strftime("%I:%M %p") %>. 
            Over the course of <%= @story_summary[:duration] ? distance_of_time_in_words(@story_summary[:duration]) : 'the session' %>, 
            <%= @story_summary[:event_count] %> events occurred involving <%= @story_summary[:actors].size %> different actors 
            and <%= @story_summary[:event_types].size %> different event types. 
            The story concluded with <strong><%= @story_summary[:last_event].action&.titleize %></strong> 
            at <%= @story_summary[:last_event].timestamp.strftime("%I:%M %p") %>.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }
</style>

<script>
  // Add smooth animations on page load
  document.addEventListener('DOMContentLoaded', function() {
    const timelineItems = document.querySelectorAll('.space-y-6 > *');
    timelineItems.forEach((item, index) => {
      item.style.animationDelay = `${index * 0.1}s`;
      item.classList.add('animate-fade-in-up');
    });
  });
  
  // Show success message when copying
  function showCopySuccess() {
    const button = event.target;
    const originalText = button.innerHTML;
    button.innerHTML = '<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>Copied!';
    button.classList.add('bg-green-100', 'text-green-700', 'border-green-300');
    setTimeout(() => {
      button.innerHTML = originalText;
      button.classList.remove('bg-green-100', 'text-green-700', 'border-green-300');
    }, 2000);
  }
  
  // Enhanced copy functionality
  document.addEventListener('click', function(e) {
    if (e.target.closest('button[onclick*="navigator.clipboard"]')) {
      showCopySuccess();
    }
  });
</script> 